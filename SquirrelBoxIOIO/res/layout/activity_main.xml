<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BoxMainActivity" >

    <TextView
        android:id="@+id/box_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="This will display the box status" />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/box_status"
        android:layout_marginBottom="15dp"
        android:text="This is the user ID" />

    <TextView
        android:id="@+id/NFC_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_id"
        android:layout_marginBottom="15dp"
        android:text="This will display the message received from the user app" />

    <Button
        android:id="@+id/button_IOIO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/NFC_message"
        android:layout_alignRight="@+id/NFC_message"
        android:layout_below="@+id/NFC_message"
        android:text="Begin IOIO Activity" />

</RelativeLayout>